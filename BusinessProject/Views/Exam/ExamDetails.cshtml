@model BusinessProject.Models.ExamModels
@{
    ViewData["Title"] = "ExamDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-green">



        <div class="panel-body" style="padding-left: 15px">
            <div class="row" style="padding-left: 400px">
                <div class="form-group col-md-6">
                    <label style="width:600px; height:35px; margin-right:auto;font-size: 16pt;font-family: Times New Roman;font-weight: bold;"> @Model.examData.title</label>
                    @*@Html.TextBoxFor(m => m.examData.title, new { style = "width:600px; height:35px; margin-right:auto;" })*@
                    @*@Html.DropDownListFor(m => m.title.id, Model.titleSelectList, new { @class = "form-control", onchange = "this.form.submit()", style = "width:570px;" })*@
                    @Html.ValidationMessageFor(m => m.examData.id)
                </div>
            </div>
            <div class="row" style="padding-left: 400px">
                <div class="form-group col-md-6">


                    @Html.TextAreaFor(m => m.examData.content, 10, 80, new { htmlAttributes = new { @class = "form-control" } })

                    @*, new { style = "width: 400px; height: 200px;" }*@
                    @*@Html.TextAreaFor(model => model.content.content, new { @class = "form-control", @rows = 4 })*@

                    @Html.ValidationMessageFor(m => m.examData.id)
                </div>
            </div>
            <div style="padding-left: 400px">
                @for (int i = 0; i < Model.questionList.Count; i++)
                {
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label style="width:600px; height:35px; margin-right:auto;font-size: 14pt;font-family: Times New Roman;font-weight: bold;">@(i + 1)) @Model.questionList[i].question</label>

                            @Html.ValidationMessageFor(m => m.questionList[i].id)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <button type="submit" style="text-align:left;width:275px; height:35px;padding-left:5px;">A) @Model.questionList[i].aChoise</button>
                        </div>

                        <div class="form-group col-md-3" style="padding-left: 152px">
                            <button type="submit" style="text-align:left;width:275px; height:35px;padding-left:5px;">B) @Model.questionList[i].bChoise</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <button type="submit" style="text-align:left;width:275px; height:35px;padding-left:5px;">C) @Model.questionList[i].cChoise</button>
                        </div>


                        <div class="form-group col-md-3" style="padding-left: 152px">
                            <button type="submit" style="text-align:left;width:275px; height:35px;padding-left:5px;">D) @Model.questionList[i].dChoise</button>
                        </div>
                    </div>

                    <br />
                }
                <div class="row" style="padding-left:215px;">
                    <a class="btn btn-primary" style="width:200px;height:45px;text-align:center;font-family:none;" href=""> Sınavı Tamamla</a>

                </div>

            </div>
        </div>



    </div>
</div>

